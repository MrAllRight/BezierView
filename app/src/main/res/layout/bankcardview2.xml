    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_tvphone"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center_horizontal"
        >

    </LinearLayout>

</FrameLayout>